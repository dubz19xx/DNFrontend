<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Test1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Test1">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#282828">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="DEEZFILES" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="16,0,16,0" Foreground="White"/>
            <TextBox Grid.Column="1" PlaceholderText="Search" VerticalAlignment="Center" Margin="16,0,16,0"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Margin="16,0,0,0" CornerRadius="15" Height="44" >
                    <Button.Content>
                        <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\coin.png" Height="28" Width="28"/>
                    </Button.Content>
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel>

 
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Current Balance : " VerticalAlignment="Center" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="150" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <ToggleButton Height="80" Width="100">
                                        <ToggleButton.Content>
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\block.png" Height="32" Width="32"/>
                                                <TextBlock Text="Start Mining" HorizontalAlignment="Center" FontSize="12"/>
                                                <TextBlock Text="Blocks" HorizontalAlignment="Center" FontSize="12"/>
                                            </StackPanel>
                                        </ToggleButton.Content>
                                    </ToggleButton>


                                    <Button Height="80" Width="100"  Margin="16,0,0,0" IsEnabled="False">
                                        <Button.Content>
                                            <StackPanel>
                                                <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\payment-method.png" Height="32" Width="32"/>
                                                <TextBlock Text="Purchase Coins" HorizontalAlignment="Center" FontSize="11.5"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>

                                </StackPanel>

                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>

                <Button Height="44" Margin="16,0,16,0" >
                    <Button.Content>
                        <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\bussiness-man.png" Width="28" Height="28"/>
                    </Button.Content>
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\bussiness-man.png" Height="32" Width="32" Margin="0,0,16,0"/>
                                    <StackPanel>
                                        <TextBlock Name ="MainpageUsername" Text="none" FontSize="16"/>
                                        <TextBlock Name ="MainpageAddress_display" Text="none" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                                <Button Content="LogOut" FontSize="18" HorizontalAlignment="Center" Click="Button_Click"/>
                            </StackPanel>

                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" >
            <SplitView x:Name="Sidebar" 
                   DisplayMode= "CompactInline" 
                   IsPaneOpen="False" 
                   CompactPaneLength="56" 
                   OpenPaneLength="200">

                <!-- Sidebar Panel -->
                <SplitView.Pane>
                    <StackPanel Background="#282828">
                        <Grid Height="56">
                        </Grid>
                        <Button x:Name="Support" >
                            <Button.Content>
                                <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\customer-service.png" Width="28" Height="28"/>
                            </Button.Content>
                            <Button.Flyout>
                                <Flyout Placement="Right">
                                    <StackPanel>
                                        <TextBlock Text="Contact Us" FontWeight="Bold" FontSize="36" Margin="0,0,0,16"/>
                                        <TextBlock Text="E-mail : xyz@gmail.com" FontSize="16" Margin="0,0,0,32"/>
                                        <TextBlock Text ="Made By TiltowerFoundation" Foreground="Gray" FontSize="12"/>


                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>

                        </Button>
                    </StackPanel>
                </SplitView.Pane>

                <!-- Main Content -->
                <SplitView.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#333333" Margin="16,16,16,16" CornerRadius="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel VerticalAlignment="Center" Margin="16,16,16,16">
                                    <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\chain.png" Height="32" Width="32" Margin="0,0,0,8"/>
                                    <TextBlock Text="Blocks Mined"/>
                                </StackPanel>
                                <TextBlock x:Name="Blocks" Text="10" FontSize="68" FontWeight="Bold" VerticalAlignment="Center" Margin="16,16,16,16"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel VerticalAlignment="Center" Margin="16,16,16,16">
                                    <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\submit.png" Height="32" Width="32" Margin="0,0,0,8"/>
                                    <TextBlock Text="Files Uploaded"/>
                                </StackPanel>
                                <TextBlock x:Name="Uploads" Text="15" FontSize="68" FontWeight="Bold" VerticalAlignment="Center" Margin="16,16,16,16"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel VerticalAlignment="Center" Margin="16,16,16,16">
                                    <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\coin.png" Height="32" Width="32" Margin="0,0,0,8"/>
                                    <TextBlock Text="Coins Earned"/>
                                </StackPanel>
                                <TextBlock x:Name="Coins" Text="50" FontSize="68" FontWeight="Bold" VerticalAlignment="Center" Margin="16,16,16,16"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Recent Files" Foreground="White" FontSize="16" Margin="10,20,0,10"/>
                            <ListView x:Name="FileListView" Background="#333" Height="316" CornerRadius="15" Margin="16,16,16,16">
                                <ListView.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="2*,*,*,*">
                                            <TextBlock Text="Name" Foreground="White" Grid.Column="0" Margin="16,0,0,16"/>
                                            <TextBlock Text="Size" Foreground="White" Grid.Column="1" Margin="0,0,0,16"/>
                                            <TextBlock Text="Date" Foreground="White" Grid.Column="2" Margin="0,0,0,16"/>
                                            <TextBlock Text="Download" Foreground="White" Grid.Column="3" Margin="0,0,0,16"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.HeaderTemplate>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="2*,*,*,*">
                                            <TextBlock Text="{Binding Name}" Foreground="White" Grid.Column="0"/>
                                            <TextBlock Text="{Binding Size}" Foreground="White" Grid.Column="1"/>
                                            <TextBlock Text="{Binding Date}" Foreground="White" Grid.Column="2"/>
                                            <Button Content="Download" Grid.Column="3"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                        <!-- Floating Action Button -->
                <Button x:Name="FabButton" 
                Width="60" Height="60"
                Background="#428DFF"
                Foreground="White"
                FontSize="24"
                CornerRadius="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Click ="FabButton_Click"
                Grid.Row="1">
                            <Button.Content>
                                <Image Source="C:\Users\kshit\Downloads\BCBDSN-master\\Assets\folder.png" Height="36" Width="36"/>
                            </Button.Content>
                            <Button.Shadow>
                                <ThemeShadow/>
                            </Button.Shadow>
                        </Button>


                    </Grid>
                </SplitView.Content>
            </SplitView>

        </Grid>
    </Grid>
</Window>
